{
  "name": "motia-monorepo",
  "private": true,
  "scripts": {
    "dev:docs": "pnpm -r --filter=docs start",
    "dev": "turbo build && pnpm -r --filter=playground dev",
    "dev:workbench": "turbo build && pnpm -r --filter=playground dev:workbench",
    "build": "turbo build --filter=!docs",
    "build:legacy": "pnpm --filter=!docs run -r build",
    "lint": "turbo lint",
    "lint:legacy": "pnpm run -r --no-bail lint",
    "lint:fix": "turbo lint -- --fix",
    "test": "turbo test",
    "test:legacy": "pnpm -r run test",
    "test:e2e": "pnpm --filter=@motiadev/e2e test",
    "test:e2e:ui": "pnpm --filter=@motiadev/e2e test:ui",
    "test:e2e:headed": "pnpm --filter=@motiadev/e2e test:headed",
    "e2e:install": "pnpm --filter=@motiadev/e2e install && pnpm --filter=@motiadev/e2e install:deps",
    "clean": "rm -rf node_modules pnpm-lock.yaml dist .turbo .next",
    "turbo:cache:clear": "turbo daemon clean",
    "turbo:cache:status": "turbo daemon status",
    "turbo:build:dry": "turbo build --dry-run",
    "turbo:build:verbose": "turbo build --verbosity=2",
    "validate:turbo": "node scripts/validate-turbo.js",
    "test:optimization": "node scripts/test-build-optimization.js",
    "build:deps": "node scripts/build-dependencies.js",
    "fix:test-module": "node scripts/fix-test-module.js",
    "validate:complete": "node scripts/validate-complete-system.js",
    "test:final": "node scripts/final-build-test.js",
    "check:system": "node scripts/final-system-check.js",
    "verify:build": "node scripts/verify-build.js"
  },
  "devDependencies": {
    "@types/node": "^22.15.18",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.26.0",
    "@eslint/js": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.1.0",
    "prettier": "^3.5.3",
    "turbo": "^2.3.3"
  },
  "resolutions": {
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.7.3",
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5"
  },
  "packageManager": "pnpm@10.11.0",
  "volta": {
    "node": "20.11.1"
  },
  "dependencies": {
    "axios": "^1.9.0"
  },
  "version": "0.0.7"
}