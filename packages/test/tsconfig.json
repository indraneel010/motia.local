{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    // FIXED: Point rootDir to 'src' for a clean output structure.
    "rootDir": "src",
    "baseUrl": ".",
    "declaration": true,
    "types": ["node"]
  },
  "include": [
    // FIXED: The compiler now only looks inside the 'src' directory.
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}