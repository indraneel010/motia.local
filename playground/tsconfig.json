{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "react-jsx"
  },
  "include": ["**/*.ts", "motia.mts", "**/*.tsx", "types.d.ts", "integration-tests/**/*", "jest-setup.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
